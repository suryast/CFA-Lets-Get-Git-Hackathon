<section class="hero is-light" style="padding:1rem;">
    <div class="hero-body">
        <div class="container">
            <h1 class="title has-text-centered">
                PROJECT ROOMS
            </h1>
        </div>
        <div class="columns is-multiline">
            <% @projects.first(5).each do |project| %>
            <div class="column is-gapless">
                <figure class="image is-400x400">
                    <%=  image_tag "http://res.cloudinary.com/suryast/image/upload/v1494158351/react-logo_f1mpm2.png" %>
                </figure>

                <strong style="padding:0 0 0 1em; font-size:150%"><%= project.title %></strong>
                <p style="padding-top:0;">by
                    <%= project.user.username %></p>
                <p style="padding-top:0;">Starting on
                    <%= project.start_date %></p>
                <p style="padding-top:0;">Status:
                    <%= project.status %></p>
              <div class="footer" style="padding:0">
                  <!--    <%= link_to 'Show', project, class: "button is-info"%>-->
                    <i class="fa fa-star button is-info stars" aria-hidden="true">
                        <%= project.ratings %></i>
                    <i class="fa fa-users button is-info stars" aria-hidden="true">
                        <%= @collaborators.where(:project_id => project.id, :approved => true).count %></i>
                </div>
            </div>
            <% end %>
        </div>
    </div>
</section>
